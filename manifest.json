{
    "manifest_version": 3,
    "name": "WndyBot",
    "short_name": "wndybot",
    "version": "1.0",
    "author": "adagradschool <adagradschool@gamil.com>",
    "description": "A friendly EMail Summarizer built using OpenAI's GPT3.",
    "content_scripts": [
        {
            "matches": [
                "*://mail.google.com/*"
            ],
            "js": [
                "src/index.js"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/gmail/index.js",
                "src/gmail/loader.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "host_permissions": [
        "https://*/*"
    ]
}